<div class="flex flex-wrap gap-4 mt-8">
  <a 
    data-astro-prefetch 
    href="/downloads"
    class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-btn text-on-accent bg-accent hover:bg-accent/90 transition-all duration-200 shadow-sm hover:shadow-md"
  >
    <i class="mgc_download_2_line mr-2 text-xl"></i>
    下载 Animeko
  </a>
  <a 
    target="_blank" 
    href="https://github.com/open-ani/animeko/"
    class="inline-flex items-center justify-center px-6 py-3 border border-border-subtle text-base font-medium rounded-btn text-txt-main bg-transparent hover:bg-border-subtle transition-all duration-200"
  >
    <i class="mgc_github_line mr-2 text-xl"></i>
    开源仓库
  </a>
  <button 
    id="rotate-btn"
    class="inline-flex items-center justify-center px-6 py-3 border border-border-subtle text-base font-medium rounded-btn text-txt-muted bg-transparent hover:text-txt-main hover:bg-border-subtle transition-all duration-200"
  >
    <i class="mgc_refresh_3_line mr-2 text-xl"></i>
    切换全屏
  </button>
</div>

<script>
  const btn = document.getElementById('rotate-btn');
  if (btn) {
    btn.addEventListener('click', () => {
      // Dispatch custom event for HeaderShowCase to listen to
      window.dispatchEvent(new CustomEvent('toggle-rotation'));
    });
  }
</script>
