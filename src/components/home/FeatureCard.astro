---
interface Props {
  title?: string
  desc?: string
}

const { title, desc } = Astro.props
---

<div class="relative group p-6 rounded-card border border-surface-highlight hover:border-primary/50 transition-all duration-300 h-full flex flex-col">
  <div class="mb-4 text-primary text-3xl p-3 bg-surface-base rounded-full w-fit group-hover:bg-primary/10 transition-colors flex items-center justify-center">
    <slot />
  </div>
  
  <h3 class="text-xl font-semibold text-etxt-main mb-3 group-hover:text-primary transition-colors">
    <slot name="title">
      {title ?? ''}
    </slot>
  </h3>
  
  <p class="text-text-muted text-base leading-relaxed grow">
    <slot name="desc">
      {desc ?? ''}
    </slot>
  </p>
</div>
