<!-- Don't edit this component's style -->
<div class="relative flex w-fit md:mb-20 md:-ml-15">
  <div>
    <div id="pc" class="hidden md:block bottom-0 right-0 relative w-[800px] h-[450px]">
      <img
        id="pc_img" alt="showcase" src="/showcase/pc/1.jpg"
        class="w-[75%] top-[7.2%] left-[12.5%] absolute h-[84%] object-cover transition-opacity duration-300"
      >
    </div>
  </div>
  <div id="phone-container" class="rotatable md:absolute md:-bottom-24 md:-right-8">
    <div id="phone" class="relative w-[200px] h-[410px]">
      <img
        id="phone_img" alt="showcase" src="/showcase/phone/1.jpg"
        class="rotatable w-[93%] top-[10.26%] left-[3.5%] absolute h-[80%] object-cover"
      >
    </div>
  </div>
  <link rel="prefetch" href="/showcase/phone/2.jpg">
  <link rel="prefetch" href="/showcase/pc/2.jpg">
</div>

<style>
#phone {
  background-image: url('/phone.png');
  background-size: cover;
}

#pc {
  background-image: url('/computer.png');
  background-size: cover;
}

.rotatable {
  transition: all 0.5s ease-in-out;
}
</style>

<script>
  let isRotated = false;
  const phoneContainer = document.getElementById('phone-container');
  const phoneImg = document.getElementById('phone_img') as HTMLImageElement;
  const pcImg = document.getElementById('pc_img') as HTMLImageElement;

  window.addEventListener('toggle-rotation', () => {
    isRotated = !isRotated;
    
    if (isRotated) {
        if (phoneContainer) phoneContainer.style.transform = 'rotate(90deg)';
        setTimeout(() => {
            if (phoneImg) phoneImg.src = '/showcase/phone/2.jpg';
            if (pcImg) pcImg.src = '/showcase/pc/2.jpg';
        }, 400);
    } else {
        if (phoneContainer) phoneContainer.style.transform = 'rotate(0deg)';
        setTimeout(() => {
            if (phoneImg) phoneImg.src = '/showcase/phone/1.jpg';
            if (pcImg) pcImg.src = '/showcase/pc/1.jpg';
        }, 400);
    }
  });
</script>
