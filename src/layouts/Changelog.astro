---
import Layout from "./Layout.astro";
const {title} = Astro.props.frontmatter;
const pageTitle = `Animeko - Changelog ${title}`;
---

<Layout title={pageTitle}>
    <article class="px-3 py-8 w-full xl:w-3/5 !mx-auto !bg-transparent markdown-body !break-words">
        <slot />
    </article>
    <link rel="stylesheet" href="/markdown.css">
</Layout>