---
import Layout from './Layout.astro';
import '@/styles/markdown.css';
import type { MarkdownHeading } from 'astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<"wiki">;
  headings: MarkdownHeading[];
}

type NavItem = {
  name: string;
  href?: string;
  children?: Array<{ name: string; href: string }>;
};

const { post, headings } = Astro.props;
const pageTitle = `Animeko - ${post.data.title}`;

const wiki = await getCollection("wiki");
const leftNavItems: NavItem[] = wiki
  .filter((post) => post.id != "index")
  .sort((a, b) => {
    const orderA = a.data.order ?? Number.MAX_SAFE_INTEGER;
    const orderB = b.data.order ?? Number.MAX_SAFE_INTEGER;
    return orderA - orderB;
  })
  .map((post) => ({
    name: post.data.title,
    href: `/wiki/${post.id}`,
  }))
---

<Layout title={pageTitle}>
  <div class="pt-20 pb-12 min-h-screen">
    <div class="w-full max-w-350 mx-auto px-4 lg:px-8">
      <div class="flex lg:flex-row flex-col-reverse gap-6 min-w-0">
        <aside class="w-full lg:w-64 shrink-0">
          <div class="sticky top-20">
            <div class="rounded-card max-h-150 overflow-y-scroll overflow-x-hidden border border-surface-highlight bg-surface-base/50 backdrop-blur-sm p-4">
              <h3 class="text-lg font-semibold text-text-main mb-4 pb-2 border-b border-surface-highlight">导航</h3>
              <nav class="space-y-2">
                {leftNavItems.map((item) => (
                  <div>
                    {item.children ? (
                      <div class="space-y-1">
                        <div class="text-sm font-medium text-text-muted py-1">{item.name}</div>
                        <div class="space-y-1 ml-2">
                          {item.children.map((child) => (
                            <a 
                              href={child.href} 
                              class="block wrap-break-word text-sm text-text-muted hover:text-primary hover:bg-surface-highlight/30 rounded px-2 py-1 transition-colors"
                            >
                              {child.name}
                            </a>
                          ))}
                        </div>
                      </div>
                    ) : (
                      <a 
                        href={item.href} 
                        class="block text-sm wrap-break-word text-text-muted hover:text-primary hover:bg-surface-highlight/30 rounded px-2 py-1 transition-colors"
                      >
                        {item.name}
                      </a>
                    )}
                  </div>
                ))}
              </nav>
              
              <div class="mt-6 pt-4 border-t border-surface-highlight">
                <h4 class="text-sm font-medium text-text-muted mb-2">相关链接</h4>
                <div class="space-y-1">
                  <a 
                    href="https://github.com/open-ani/animeko" 
                    target="_blank"
                    class="flex items-center gap-2 text-sm text-text-muted hover:text-primary px-2 py-1 rounded transition-colors"
                  >
                    <i class="mgc_github_line"></i>
                    GitHub 仓库
                  </a>
                  <a 
                    href="https://t.me/openani" 
                    target="_blank"
                    class="flex items-center gap-2 text-sm text-text-muted hover:text-primary px-2 py-1 rounded transition-colors"
                  >
                    <i class="mgc_telegram_fill"></i>
                    Telegram 群组
                  </a>
                </div>
              </div>
            </div>
          </div>
        </aside>

        <main class="flex-1 min-w-0">
          <article class="markdown-body bg-surface-base/50 backdrop-blur-sm rounded-card border border-surface-highlight p-6 lg:p-8">
            <h1>{post.data.title}</h1>
            <slot />
          </article>
        </main>
        <aside class="w-full lg:w-64 shrink-0">
          <div class="sticky top-20">
            <div id="toc-container" class="rounded-card border border-surface-highlight bg-surface-base/50 backdrop-blur-sm p-4">
              <div class="flex items-center justify-between mb-0 lg:mb-4 pb-0 lg:pb-2 border-0 sm:border-b border-surface-highlight">
                <h3 class="text-lg font-semibold text-text-main">目录</h3>
                <button 
                  id="toc-toggle" 
                  class="lg:hidden text-text-muted hover:text-primary p-1"
                  aria-label="切换目录"
                  type="button"
                >
                  <i class="mgc_up_line"></i>
                </button>
              </div>
              <nav id="toc-content" class="space-y-1 max-h-150 mt-2 lg:mt-0 px-1">
                {
                  headings.length === 0 ? (
                    <div id="toc-empty">
                      <p class="text-sm text-text-muted italic text-center py-4">
                        此页面暂无标题
                      </p>
                    </div>
                  ) : (
                    headings.map((heading) => {
                      const level = heading.depth;
                      const paddingLeft = Math.max(0, (level - 2) * 12);
                      return (
                        <a
                          href={`#${heading.slug}`}
                          class="toc-item block wrap-break-word text-sm text-text-muted hover:text-primary hover:bg-surface-highlight/30 rounded px-2 py-1 transition-colors truncate"
                          style={{
                            "--toc-level": `${paddingLeft}px`,
                          }}
                          title={heading.text}
                        >
                          {heading.text}
                        </a>
                      );
                    })
                  )
                }
              </nav>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </div>

  <style>
    @media (max-width: 1024px) {
      #toc-content:not(.expanded) {
        display: none;
      }

      #toc-content.expanded {
        display: block;
      }
    }

    .toc-item {
      display: block;
      color: var(--color-text-muted);
      font-size: 0.875rem;
      line-height: 1.25rem;
      border-radius: 0.375rem;
      transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      transition-duration: 150ms;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      padding-left: calc(0.5rem + var(--toc-level, 0px)) !important;
      padding-top: 0.25rem;
      padding-bottom: 0.25rem;
    }

    .toc-item:hover {
      color: var(--color-primary) !important;
      background-color: var(--color-surface-highlight);
      margin-left: -0.25rem;
      margin-right: -0.25rem;
      padding-left: calc(0.75rem + var(--toc-level, 0px)) !important;
      padding-right: 0.75rem !important;
    }
  </style>

  <script>
    function scrollToAnchor(
      target: HTMLElement,
      options?: {
        offset?: number;
        closeTocOnMobile?: boolean;
        mobileBreakpoint?: number;
      },
    ) {
      const { offset = 100, closeTocOnMobile = true, mobileBreakpoint = 1024, } = options ?? {};

      const href = target.getAttribute("href");
      if (!href || !href.startsWith("#")) return;

      const id = href.slice(1);
      const element = document.getElementById(id);
      if (!element) return;

      const top = element.getBoundingClientRect().top + window.scrollY - offset;

      window.scrollTo({
        top,
        behavior: "smooth",
      });


      if (closeTocOnMobile && window.innerWidth < mobileBreakpoint) {
        const tocContent = document.getElementById("toc-content");
        const tocToggle = document.getElementById("toc-toggle");
        const icon = tocToggle?.querySelector("i");

        tocContent?.classList.remove("expanded");
        if (icon) icon.className = "mgc_arrow_up_line";
      }
    }

    document.addEventListener("click", (e) => {
      if (!(e.target instanceof HTMLElement)) return;
      const tocItem = e.target.closest(".toc-item");
      if (!tocItem || !(tocItem instanceof HTMLElement)) return;
      e.preventDefault();
      scrollToAnchor(tocItem);
    });

    // Copy Button Logic
    const codeBlocks = document.querySelectorAll("pre");
    codeBlocks.forEach((block) => {
      const wrapper = document.createElement("div");
      wrapper.className = "code-block-wrapper";

      const button = document.createElement("button");
      button.className = "copy-button";
      button.innerText = "复制";
      button.type = "button";

      block.parentNode?.insertBefore(wrapper, block);
      wrapper.appendChild(block);
      wrapper.appendChild(button);

      button.addEventListener("click", async () => {
        const code = block.querySelector("code")?.innerText;
        if (code) {
          await navigator.clipboard.writeText(code);
          button.innerText = "已复制";
          setTimeout(() => {
            button.innerText = "复制";
          }, 2000);
        }
      });
    });

    const tocToggle = document.getElementById("toc-toggle");
    const tocContent = document.getElementById("toc-content");

    if (tocToggle && tocContent) {
      tocToggle.addEventListener("click", () => {
        tocContent.classList.toggle("expanded");
        const icon = tocToggle.querySelector("i");
        if (icon) {
          icon.className = tocContent.classList.contains("expanded")
            ? "mgc_down_line"
            : "mgc_up_line";
        }
      });
    }

    if (window.innerWidth < 1024) {
      document.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        if (target.classList.contains("toc-item")) {
          if (tocContent) {
            tocContent.classList.remove("expanded");
            const icon = tocToggle?.querySelector("i");
            if (icon) {
              icon.className = "mgc_up_line";
            }
          }
        }
      });
    }
  </script>
</Layout>
