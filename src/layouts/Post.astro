---
import Layout from "../layouts/Layout.astro";
const {title} = Astro.props.frontmatter;
const pgtitle = `Animeko - Post ${title}`;
---

<Layout title={pgtitle}>
    <article class="px-3 py-8 w-full xl:w-3/5 !mx-auto !bg-transparent markdown-body !break-words">
        <slot/>
    </article>
    <link rel="stylesheet" href="/markdown.css">
</Layout>

<style is:inline>
    .markdown-body img {
        display: inline-block !important;
        vertical-align: middle !important;
    }
</style>